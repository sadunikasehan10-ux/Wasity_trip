  <script>
    function toggleCustom() {
      const choice = document.getElementById("choice").value;
      const box = document.getElementById("customBox");

      if (choice === "custom") {
        box.style.display = "block";
      } else {
        box.style.display = "none";
      }
    }
  </script>

